<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allsparkstudio.zaixiyou.dao.PostTagMapper">
    <select id="selectTagIdsByPostId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select tag_id
        from post_tag
        where post_id = #{postId,jdbcType=INTEGER}
    </select>
    <delete id="deleteByPostId" parameterType="java.lang.Integer">
        delete from post_tag
        where post_id = #{postId,jdbcType=INTEGER}
    </delete>
</mapper>