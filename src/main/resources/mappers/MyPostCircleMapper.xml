<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allsparkstudio.zaixiyou.dao.PostCircleMapper">
    <select id="countPostsByCircleId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select count(*)
        from post_circle
        where circle_id = #{circleId,jdbcType=INTEGER}
    </select>
    <delete id="deleteByPostId" parameterType="java.lang.Integer">
        delete from post_circle
        where post_id = #{postId,jdbcType=INTEGER}
    </delete>
    <delete id="deleteByCircleId" parameterType="java.lang.Integer">
        delete from post_circle
        where circle_id = #{circleId,jdbcType=INTEGER}
    </delete>
</mapper>
